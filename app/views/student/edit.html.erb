<div class="container">
  <h1> Update student information </h1>

  <%= form_with model: @edit_student_info, url: student_update_path(@edit_student_info), method: :patch, local: true do |form| %>
    <div>
      <%= form.label :Name %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :Email %>
      <%= form.text_field :email %>
    </div>

    <div>
      <%= form.label :Email %>
      <%= form.file_field :student_avatar %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>

</div>