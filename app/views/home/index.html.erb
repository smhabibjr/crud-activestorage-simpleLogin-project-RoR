<div class="container border border-primary h-100 w-100">
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <h1>User list </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 col-md-12 col-sm-12 d-flex justify-content-center">
      <form>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" id="inputUserName" aria-describedby="emailHelp" placeholder="name">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="email" class="form-control" id="inputUserEmail" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="d-flex justify-content-center mt-4">
          <button id="btnSubmit" type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>

    <div class="col-lg-6 col-md-12 col-sm-12 d-flex justify-content-center">
      <ul>
        <%= @user.each do |single_element|  %>
          <li> <%= single_element.name %> </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>




